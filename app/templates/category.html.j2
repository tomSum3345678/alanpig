{% extends "base.html.j2" %}
{% block app_content %}
<h1>{{ category.name }}</h1>
{% for news_item in news %}
<h2><a href="{{ url_for('news_detail', news_id=news_item.id) }}">{{ news_item.title }}</a></h2>
<p>{{ news_item.content }}</p>
{% for picture in news_item.pictures %}
<img src="{{ url_for('static', filename=picture.filename) }}" alt="{{ picture.description }}">
{% endfor %}
{% endfor %}
{% endblock %}